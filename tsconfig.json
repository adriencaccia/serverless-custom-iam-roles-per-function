{
  "compilerOptions": {
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "composite": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "emitDeclarationOnly": true,
    "outDir": "./dist/types"
  },
  "exclude": ["./dist"],
  "include": ["./**/*.ts"]
}
